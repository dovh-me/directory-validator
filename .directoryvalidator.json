{
  "ignoreFiles": [
    ".gitignore",
    ".directoryvalidator.json",
    "package-lock.json",
    ".DS_Store"
  ],
  "ignoreDirs": ["node_modules", "dist", ".git", ".github"],
  "commonRules": {
    "rule_indexfile": {
      "type": "file",
      "name": "index.js"
    }
  },
  "rules": [
    {
      "type": "file",
      "name": "package.json"
    },
    {
      "type": "file",
      "name": "LICENSE"
    },
    {
      "type": "file",
      "name": "tsconfig.json"
    },
    {
      "type": "file",
      "name": "jest.*.js"
    },
    {
      "type": "file",
      "name": "*.md"
    },
    {
      "type": "file",
      "name": ".prettier*"
    },
    {
      "type": "directory",
      "name": "src",
      "isOptional": true,
      "rules": []
    }
  ]
}
