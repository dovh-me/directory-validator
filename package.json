{
  "name": "directory-validator",
  "version": "1.0.3",
  "description": "Validates folder structure",
  "main": "lib/index.js",
  "bin": {
    "directory-validator": "lib/index.js"
  },
  "scripts": {
    "build": "npm run clean && npm run test && tsc",
    "clean": "rm -rf .nyc_output && rm -rf coverage && rm -rf lib",
    "release": "npm run build && npm publish",
    "test": "mocha -r source-map-support/register --compilers ts-node/register src/_tests.ts",
    "test-coverage": "nyc --reporter html --reporter text npm run test",
    "test-coverage-coveralls": "npm run test-coverage && nyc report --reporter=text-lcov | coveralls",
    "test-coverage-watch": "chokidar src/**/*.ts -c 'npm run test-coverage'",
    "test-watch": "chokidar src/**/*.ts -c 'npm run test'"
  },
  "author": "Erwin Gaitan O <erwingaitano@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/colors": "^1.1.3",
    "@types/commander": "^2.9.1",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.10",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "node-helpers": "git+https://github.com/erwingo/node-helpers.git"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/errors.ts",
      "src/index.ts",
      "src/types.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erwingo/directory-validator.git"
  },
  "keywords": [
    "validator",
    "directory",
    "folder"
  ],
  "bugs": {
    "url": "https://github.com/erwingo/directory-validator/issues"
  },
  "homepage": "https://github.com/erwingo/directory-validator#readme"
}
